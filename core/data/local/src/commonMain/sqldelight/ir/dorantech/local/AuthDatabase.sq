CREATE TABLE Auth (
    id INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
    userName TEXT NOT NULL,
    password TEXT NOT NULL,
    firstName TEXT,
    lastName Text,
    email Text,
    phoneNumber Text,
    gender Text,
    image Text,
    birthDate Text
);

signup:
INSERT INTO Auth (userName , password, firstName, lastName, email, phoneNumber, gender, image, birthDate)
VALUES (?,?,?,?,?,?,?,?, ?);

isValidUser:
SELECT EXISTS(SELECT 1 FROM Auth WHERE userName = ? AND password = ?) AS status;

